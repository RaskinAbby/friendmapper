<%= form_tag session_url, :html => { :class => 'form-horizontal' } do %>
  <div class="control-group">
    <%= label_tag :email, nil, :class => 'control-label' %>
    <div class="controls">
      <%= email_field_tag :email, params[:email], :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :password, nil, :class => 'control-label' %>
    <div class="controls">
      <%= password_field_tag :password, nil, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= submit_tag "Sign In", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                root_url, :class => 'btn' %>
  </div>
<% end %>
